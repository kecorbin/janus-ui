<div class="card">
  <div class="header">
    <div class="col-md-8">
      <h4 class="title">{{title}}</h4>
    </div>

  </div>
  <div class="content">
    <div class="table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Device Name</th>
            <th>IP</th>
            <th>MAC</th>
            <th>Status</th>
            <th>Manufacturer</th>
            <th>Model</th>
            <th>Firmware</th>
            <th>Note</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each devices as |device|}}
            {{#link-to "systems.show" system tagName="tr"}}
              <td>{{device.dev_name}}</td>
              <td>{{device.ip}}</td>
              <td>{{device.uniqueid}}</td>
              <td>{{device.status}}</td>
              <td>{{device.mfg}}</td>
              <td>{{device.model}}</td>
              <td>{{device.firmware}}</td>
              <td>{{device.note}}</td>
              <td>Ping</td>
            {{/link-to }}
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
