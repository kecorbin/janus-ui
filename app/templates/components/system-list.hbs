<div class="card">
  <div class="header">
    <div class="col-md-8">
      <h4 class="title">{{title}}</h4>
    </div>

  </div>
  <div class="content">
    <div class="table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>System Name</th>
            <th>Manufacturer</th>
            <th>Version</th>
            <th>ID</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each systems as |system|}}
            {{#link-to "systems.show" system tagName="tr"}}
              <td>{{system.job_name}}</td>
              <td>{{system.ctl_mfg}}</td>
              <td>{{system.mod_version}}</td>
              <td>{{system.system_id}}</td>
              <td><a>Monitor System with Greenlight</a></td>
            {{/link-to }}
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
