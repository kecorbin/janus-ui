{{#if isShowingModal}}
  {{#modal-dialog translucentOverlay=true containerClass="create-scan-modal" clickOutsideToClose=true onClose='closeModalDialog'}}
    <h4>Enter Scan Details</h4>

                  <div class="container-fluid">
                    You are creating a scan on gateway <strong>{{model.id}}</strong>
                    <br>
                    The LAN ip of this device is <strong>{{model.lanip}}</strong>
                    <hr />
                    <form>
                      <div class="form-group">
                        <div class="form-group row">
                          <label for="dest">Destination</label>
                          {{input type="text" id="dest" class="form-control" value=destination placeholder=model.lanip}}
                          <small id="emailHelp" class="form-text text-muted">
                            Enter an IP prefix in
                            <a target="_blank" href="https://www.ripe.net/about-us/press-centre/understanding-ip-addressing">
                               CIDR notation
                            </a>
                          </small>
                        </div>
                        <div class="form-group row">
                          <label for="type">Scan Type</label>
                            <select id="type" class="form-control" onchange={{action "selectType" value="target.value"}}>
                              {{#each types as |typeChoice|}}
                                <option value={{typeChoice}} selected={{eq type typeChoice}}>{{typeChoice}}</option>
                              {{/each}}
                            </select>
                            <small id="emailHelp" class="form-text text-muted">
                              <hr />
                              <strong>Quick Scan</strong> gathers IP, MAC, and Vendor information.
                              <br>
                              <strong>Full Scan</strong> provides a much deeper scan including port information
                              <br>
                            </small>
                        </div>
                        <!-- <button type="submit" class="btn btn-primary btn-lg">Submit</button> -->
                         <button class="btn btn-primary" {{action "createScan"}}>Create</button>
                      </div>
                    </form>
                  </div>

     <!-- <button class="btn btn-primary" {{action "createSpeedTest"}}>Yes</button> -->
  {{/modal-dialog}}
{{/if}}
